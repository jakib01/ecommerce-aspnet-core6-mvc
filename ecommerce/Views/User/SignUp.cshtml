@model ecommerce.DAL.User

@{
    ViewData["Title"] = "SignUp";
}


<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    <form class="form-signin" asp-action="SignUp">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-label-group">
                            <label asp-for="FirstName">First Name</label>
                            <input type="text" asp-for="FirstName" id="FirstName" name="FirstName" class="form-control" placeholder="First Name">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="form-label-group">
                            <label asp-for="LastName">Last Name</label>
                            <input type="text" asp-for="LastName" id="LastName" name="LastName" class="form-control" placeholder="Last Name">
                        </div>

                        <div class="form-label-group">
                            <label asp-for="Email">Email address</label>
                            <input type="email" asp-for="Email" id="Email" class="form-control" placeholder="Email address">
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>

                        <div class="form-label-group">
                            <label asp-for="PhoneNo">Phone Number</label>
                            <input type="text" asp-for="PhoneNo" id="PhoneNo" name="PhoneNo" class="form-control" placeholder="Phone Number">
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>

                        </div>

                        <div class="form-label-group">
                            <label asp-for="Password">Password</label>
                            <input type="password" asp-for="Password" id="Password" name="Password" class="form-control" placeholder="Password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        @*<div class="form-label-group">
                        <input type="password" asp-for="RePassword" id="RePassword" name="RePassword" class="form-control" placeholder="Re-Password">
                        <label for="RePassword">Re-Password</label>
                        <span asp-validation-for="RePassword" class="text-danger"></span>
                        </div>*@

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign Up</button>

                        <hr class="my-4">
                        <a class="btn btn-lg btn-success btn-block text-uppercase" href="/User/Login"><i class="fa fa-phone mr-2"></i> Sign in with Phone Number</a>
                        <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fa fa-google mr-2"></i> Sign in with Google</button>
                        <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fa fa-facebook-f mr-2"></i> Sign in with Facebook</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

